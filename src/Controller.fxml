<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="300.0" prefWidth="600.0" style="-fx-background-color: #000000;" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <children>
      <ImageView fx:id="arrowleft" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/model/arrow_turn_left.png" />
         </image>
         <viewport>
            <Rectangle2D />
         </viewport>
      </ImageView>
      <ImageView fx:id="arrowright" accessibleRole="BUTTON" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/model/arrow_turn_right.png" />
         </image>
      </ImageView>
      <Button fx:id="btn_rotate_reset" mnemonicParsing="false" onAction="#btn_rotate_reset" text="Zentrieren">
         <font>
            <Font size="18.0" />
         </font></Button>
      <Button fx:id="btn_rotate_left" mnemonicParsing="false" onAction="#btn_rotate_left" opacity="0.0" />
      <Button fx:id="btn_rotate_right" mnemonicParsing="false" onAction="#btn_rotate_right" opacity="0.0" />
      <ChoiceBox fx:id="cbModelChecker" accessibleHelp="Auswahl der Modelle" onAction="#cbModelChecker">
         <padding>
            <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
         </padding></ChoiceBox>
   </children>
</AnchorPane>
